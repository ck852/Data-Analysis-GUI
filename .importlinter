[importlinter]
root_package = data_analysis_gui
include_external_packages = True

[importlinter:contract:layers]
name = Clean Architecture Layers
type = layers
layers =
    data_analysis_gui.gui
    data_analysis_gui.core.infrastructure
    data_analysis_gui.core.application
    data_analysis_gui.core.domain
containers =
    data_analysis_gui

[importlinter:contract:domain_independence]
name = Domain has no outward dependencies
type = independence
modules =
    data_analysis_gui.core.domain
ignore_imports =
    data_analysis_gui.core.domain -> typing
    data_analysis_gui.core.domain -> dataclasses
    data_analysis_gui.core.domain -> numpy
    data_analysis_gui.core.domain -> enum
    data_analysis_gui.core.domain -> abc

[importlinter:contract:gui_isolation]
name = GUI cannot import from infrastructure directly
type = forbidden
source_modules =
    data_analysis_gui.gui
forbidden_modules =
    data_analysis_gui.core.infrastructure
    data_analysis_gui.core.domain.services
ignore_imports =
    data_analysis_gui.gui -> data_analysis_gui.core.application
    data_analysis_gui.gui -> data_analysis_gui.core.domain.models
    data_analysis_gui.gui -> data_analysis_gui.core.domain.entities

[importlinter:contract:application_boundaries]
name = Application cannot import from GUI
type = forbidden
source_modules =
    data_analysis_gui.core.application
forbidden_modules =
    data_analysis_gui.gui